<div class="well">
  <div id="mentionable-data" data-content="<%= mentionable_user_path(current_user) %>"></div>
  <%= form_for @post, html: { class: 'post_form' } do |f| %>
    <div class="form-group">
       <h4><%= current_page?(root_path) ? "Create post" : "Update post" %></h4>
      <!-- <h4>Update Status</h4> -->
      <!-- <div id="post-content" contenteditable="true" class="editable form-control input-mentionable" placeholder="What's up?"></div> -->
      <div id="post-content" contenteditable="true">
        <%= f.text_field :content, class: 'editable form-control input-mentionable', autofocus: false %>
      </div>
    </div>
    <div id="img-preview" class="form-group hidden">
      <img src="" alt="Preview">
    </div>
    <div class="form-group hidden">
      <%= f.file_field :attachment %>
    </div>
    <div class="form-group">
      <a id="post-attachment" href="javascript:void(0);" class="pull-right btn btn-primary">
        <%= fa_icon 'image' %>
      </a>
      <%= f.submit 'Post', class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
